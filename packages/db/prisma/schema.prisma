generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ============================ Models ============================


// Student Model

model Student {
  id    String @id @default(uuid())
  name  String
  email String @unique

  qid               String? @unique
  encryptedPassword String? // ERP password. The app itself uses only oAuth for authentication.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
