{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationMap": true,

    "forceConsistentCasingInFileNames": true
  }
}